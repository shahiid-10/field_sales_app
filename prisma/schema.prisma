generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id          String   @id @default(cuid())
  clerkUserId String?  @unique
  email       String   @unique
  name        String?
  role        Role
  createdAt   DateTime @default(now())
  visits      Visit[]
  orders      Order[]
}

enum Role {
  ADMIN
  SALESMAN
  STOCK_MANAGER
}

model Store {
  id               String            @id @default(cuid())
  name             String
  address          String?
  latitude         Float?
  longitude        Float?
  stockPositions   StockPosition[]
  visits           Visit[]
  orders           Order[]
  stockAdjustments StockAdjustment[]
}

model Product {
  id               String            @id @default(cuid())
  name             String
  manufacturer     String?
  mrp              Float
  inventory        Inventory? // Central warehouse stock
  stockPositions   StockPosition[] // Stock at each store
  orderItems       OrderItem[]
  unfulfilledItems UnfulfilledItem[]
  stockAdjustments StockAdjustment[]
}

model Inventory {
  productId String  @unique
  quantity  Int     @default(0)
  product   Product @relation(fields: [productId], references: [id])
}

