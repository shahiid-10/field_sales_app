generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

/* =========================
   ENUMS
========================= */

enum Role {
  ADMIN
  SALESMAN
  STOCK_MANAGER
}

enum AdjustmentReason {
  RESTOCK
  RETURN
  DAMAGE
  EXPIRY
  THEFT
  COUNT_CORRECTION
  OTHER
}

enum OrderStatus {
  PENDING
  PARTIAL
  FULFILLED
  UNFULFILLED
}

/* =========================
   USER & STORE
========================= */

model User {
  id          String   @id @default(cuid())
  clerkUserId String?  @unique
  email       String   @unique
  name        String?
  role        Role
  createdAt   DateTime @default(now())

  visits Visit[]
  orders Order[]
}

model Store {
  id               String            @id @default(cuid())
  name             String
  address          String?
  latitude         Float?
  longitude        Float?

  stockPositions   StockPosition[]
  visits           Visit[]
  orders           Order[]
  stockAdjustments StockAdjustment[]
}

/* =========================
   PRODUCT & INVENTORY
========================= */

model Product {
  id               String            @id @default(cuid())
  name             String
  manufacturer     String?
  mrp              Float

  inventory        Inventory?
  stockPositions   StockPosition[]
  orderItems       OrderItem[]
  unfulfilledItems UnfulfilledItem[]
  stockAdjustments StockAdjustment[]
}

model Inventory {
  productId String  @unique
  quantity  Int     @default(0)

  product Product @relation(fields: [productId], references: [id])
}

/* =========================
   STOCK (BATCH AWARE)
========================= */

model StockPosition {
  id           String    @id @default(uuid())
  storeId      String
  productId    String
  quantity     Int       @default(0)
  expiryDate   DateTime?
  batchNumber  String?
  manufactured DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  store   Store   @relation(fields: [storeId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@index([storeId, productId])
  @@index([productId])
  @@index([expiryDate])
  @@map("stock_positions")
}

/* =========================
   VISITS & ADJUSTMENTS
========================= */

model Visit {
  id         String   @id @default(cuid())
  salesmanId String
  storeId    String
  timestamp  DateTime @default(now())
  latitude   Float?
  longitude  Float?
  notes      String?

  salesman User  @relation(fields: [salesmanId], references: [id])
  store    Store @relation(fields: [storeId], references: [id])

  stockAdjustments StockAdjustment[]
}

model StockAdjustment {
  id             String            @id @default(cuid())
  visitId        String
  productId      String
  storeId        String
  quantityChange Int
  reason         AdjustmentReason?
  batchNumber    String?
  expiryDate     DateTime?
  notes          String?
  createdAt      DateTime          @default(now())

  visit   Visit   @relation(fields: [visitId], references: [id])
  product Product @relation(fields: [productId], references: [id])
  store   Store   @relation(fields: [storeId], references: [id])

  @@index([visitId])
  @@index([productId, storeId])
  @@index([storeId, createdAt(sort: Desc)])
}

/* =========================
   ORDERS
========================= */

model Order {
  id         String      @id @default(cuid())
  storeId    String
  salesmanId String
  status     OrderStatus @default(PENDING)
  createdAt  DateTime    @default(now())

  items            OrderItem[]
  unfulfilledItems UnfulfilledItem[]  // ✅ FIXED RELATION

  store    Store @relation(fields: [storeId], references: [id])
  salesman User  @relation(fields: [salesmanId], references: [id])

  @@index([storeId, createdAt])
  @@index([status, createdAt])
}

model OrderItem {
  id        String  @id @default(cuid())
  orderId   String
  productId String
  quantity  Int

  order   Order   @relation(fields: [orderId], references: [id])
  product Product @relation(fields: [productId], references: [id])

  @@index([productId])
}

/* =========================
   UNFULFILLED ITEMS
========================= */

model UnfulfilledItem {
  id           String   @id @default(cuid())
  orderId      String
  storeId      String
  productId    String
  requestedQty Int
  availableQty Int      @default(0)
  createdAt    DateTime @default(now())

  order   Order?   @relation(fields: [orderId], references: [id], onDelete: Cascade)   // ✅ FIXED
  product Product @relation(fields: [productId], references: [id])

  @@index([orderId])
  @@index([productId, createdAt])
  @@index([storeId, createdAt])
}
