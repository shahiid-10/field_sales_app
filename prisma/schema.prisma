model StockPosition {
  id           String    @id @default(uuid())
  storeId      String
  productId    String
  quantity     Int       @default(0)
  expiryDate   DateTime? // nullable, different expiry = different row
  batchNumber  String? // nullable, different batch = different row
  manufactured DateTime? // optional: manufacturing date
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  store   Store   @relation(fields: [storeId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  // IMPORTANT: NO unique constraint on storeId + productId
  // This allows multiple rows for the same product/store with different batches/expiry

  // Optional: Prevent exact duplicate entries (same everything)
  // Only uncomment if you NEVER want two identical rows (same store/product/batch/expiry)
  // @@unique([storeId, productId, batchNumber, expiryDate])

  @@index([storeId, productId]) // Fast lookup by store + product
  @@index([productId]) // Fast lookup by product across stores
  @@index([expiryDate]) // For expiry reports/alerts
  @@map("stock_positions")
}

