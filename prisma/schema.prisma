model Visit {
  id         String   @id @default(cuid())
  salesmanId String
  storeId    String
  timestamp  DateTime @default(now())
  latitude   Float?
  longitude  Float?
  notes      String? // optional

  salesman User  @relation(fields: [salesmanId], references: [id])
  store    Store @relation(fields: [storeId], references: [id])

  // NEW
  stockAdjustments StockAdjustment[]
}

enum AdjustmentReason {
  RESTOCK
  RETURN
  DAMAGE
  EXPIRY
  THEFT
  COUNT_CORRECTION
  OTHER
}

model StockAdjustment {
  id             String            @id @default(cuid())
  visitId        String
  productId      String
  storeId        String // helps with fast queries + reporting
  quantityChange Int // positive = added to store, negative = removed
  reason         AdjustmentReason?
  batchNumber    String?
  expiryDate     DateTime?
  notes          String?
  createdAt      DateTime          @default(now())

  visit   Visit   @relation(fields: [visitId], references: [id])
  product Product @relation(fields: [productId], references: [id])
  store   Store   @relation(fields: [storeId], references: [id])

  @@index([visitId])
  @@index([productId, storeId])
  @@index([storeId, createdAt(sort: Desc)])
}

model Order {
  id         String      @id @default(cuid())
  storeId    String
  salesmanId String
  status     OrderStatus @default(PENDING)
  createdAt  DateTime    @default(now())
  items      OrderItem[]
  store      Store       @relation(fields: [storeId], references: [id])
  salesman   User        @relation(fields: [salesmanId], references: [id])
}

model OrderItem {
  id        String  @id @default(cuid())
  orderId   String
  productId String
  quantity  Int
  order     Order   @relation(fields: [orderId], references: [id])
  product   Product @relation(fields: [productId], references: [id])
}

model UnfulfilledItem {
  id           String   @id @default(cuid())
  orderId      String
  storeId      String
  productId    String
  requestedQty Int
  availableQty Int      @default(0)
  createdAt    DateTime @default(now())
  product      Product  @relation(fields: [productId], references: [id])
}

enum OrderStatus {
  PENDING
  PARTIAL
  FULFILLED
  UNFULFILLED
}
